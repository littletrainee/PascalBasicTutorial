{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Free Pascal Debug",
            "type": "shell",
            "command": "fpc",
            "args": [
                "-Cr",
                "-g",
                "${workspaceFolder}\\main.pas",
                "${workspaceFolder}\\person_unit.pas"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
